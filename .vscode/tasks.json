{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C++ project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "${workspaceFolder}/read_mtx",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/file_management.cpp",
                "-Wall",
                "-std=c++11",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}